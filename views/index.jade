  body
    div.user-page
    each user, index in Users
      //- - console.log(user.nickname)
      h5.user-item(style={}) 
        //- #{JSON.stringify(user, null, 2)}
        span #{user.id}
        span.nickname #{user.nickname}
        span.openid #{user.openid}
        img.avatar(src='#{user.avatar}')
        span.gender #{user.gender == 1 ? '男' : (user.gender == 2 ? '女' : '保密')}
        span.time #{user.createdAt}


