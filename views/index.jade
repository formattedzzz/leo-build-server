      *{
        padding: 0;
        margin: 0;
      }
      .user-page{
        background: #eee;
      }
      .user-item{
        padding: 20px;
        margin: 10px 0;
        background: #555;
        font-size: 16px;
        color: #fff;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .user-item .nickname{
        font-size: 18px;
      }
      .user-item .avatar{
        width: 48px;
        height: 48px;
        border-radius: 50%;
      }
